<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <div class="media-content">
        <%= render 'notes/form' %>
      </div>
    </article>
  <% end %>


  <% @notes.each do | note | %>
    <div class="box">
      <article class="media">

        <div class="media-content">
          <div class="content">
            <% if user_signed_in? %>
            <strong><%= note.user.name %></strong><br />
            <small><%= note.user.username %></small><br/>
              <% end %>
            <p><%= note.body %></p>
          </div>
          <% if user_signed_in? && current_user.id == note.user_id %>
            <nav class="level">
              <div class="level-left is-mobile">
                <%= link_to edit_note_path(note), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to note, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>