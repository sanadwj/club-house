<%= simple_form_for(@note) do |f|  %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :body, label: "What is the Post?", input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, autofocus: true, placeholder: 'Composing a new Post...' %>
  </div>
</div>
<%= f.button :submit, class: 'button is-dark' %>
<% end %>